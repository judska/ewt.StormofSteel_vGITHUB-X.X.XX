{Entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{collider "tank.light"}
	{props "light" "turret_rotator" "vision_vehicle_medium" "muzzle_minimum"}

	{targetClass "light_tank"}
	{patherId "tank.light"}
	{extender "enumerator"}

	{Volume "Body1"
		{tags "body"}
		{thickness 20}
		{component "body"}
	}
	{Volume "Body2"
		{tags "body"}
		{component "body"}
		{thickness 20}
	}
	
	{Volume "gun_rot"
		{tags "gun"}
		{component "gun"}
		{thickness 20}
	}
	{Volume "gun"
		{tags "gun"}
		{thickness 10}
	}
	{volume "engine"
		{tags "engine"}
		{thickness 10}
	}
	{volume "crew"
		{able {contact_ground 0}}
	}

	("shield" args 10)

	("armor_light" turret(20 15 15 10) body(20 13 13 10))
	("armor_mantlet" t(30))
	("armor_engine"  t(13))

	("crew_3_human_extended")

	{extender "shield"
		{on}
	}
	{component "shieldL1" {tags "shield"}}
	{component "shieldR1" {tags "shield"}}
	{boarder
		{anm "driver"
			{forward	{begin	"board_t34_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
			{reverse 	{end	"emit_t34_hold"} {base "close_driver"}}
		}
		{anm "left"
			{forward	{begin	"board_Kv"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor1))
	("seat_human" place(seat3) bone(seat03) door(emit6)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit5)  animation(armor))
	("seat_human" place(seat5) bone(seat05) door(emit5)  animation(armor))
	("seat_human" place(seat6) bone(seat06) door(emit5)  animation(armor))
	
	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item "ammo mgun" 2394}
			{item "ammo bullet45 ap" 50}
			{item "ammo bullet45 fg" 65}
			{item "dt" filled {user "mgun"}}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "45mm_20k" filling "bullet45 ap" 1}
			{charger "charger"}
			("abm_low")    

		}
		{place "mgun"
			{type "mgun_coaxial"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			{charger "charger"}
			{basic}
            		("abm_mgun")
		}
	}
	
	{mass 11500}

	{Chassis
		("tank_trace" fx("tracks_sm") step(0.4) len(0.54))
		{Locomotion ("locomotion")
			{maxspeed   45}
			{maxSpeedAtMaxTurn 19}
			{StartTime  15}
			{TurnTime   8}
			{TurnStart  1.1}			
			{TurnRadius 7} 
    			{TurnStop   0.6}
			{BrakeTime  1.5}
			{StopTime   2.5}
			{Gears  0.2 0.5 1}
			{RearGears  0.25}
		}
	}

	{Extension "bt5_fin.mdl"}

	{bone "turret"
		{speed 0.02}
	}
}
