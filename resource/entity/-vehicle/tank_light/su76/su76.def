		}
		{FuelBag
			{volume 420 }	
			{rate	 85 }   
			{remain 420 }
			{fuel "fuel"}
		}
		{speed
        	{Normal  12}
        	{Slow  18}
    	}
	}

	{Extension "su76.mdl"}

	{bone "turret"
		{speed 0.007}
		{limits -20 16}
	}
	{bone "gun_rot"
		{speed 0.007}
		{limits -25 3}
	}
