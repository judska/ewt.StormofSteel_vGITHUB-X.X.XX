			("abm_low")
		}
        }

	{mass 46000}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.47) len(0.23))
		{Locomotion ("locomotion")
			{MaxSpeed 	       22} ; максимальная скорость, kmph
			{maxSpeedAtMaxTurn 7}
			{StartTime 	        17} ; время разгона до макс. скорости с 0, seconds
                        {BrakeTime         0.75}
                        {StopTime       1}	 ; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius     	7} ; мин. радиус разворота, meter
			{TurnTime		8} ; время на разворот на 360 градусов при макс. скорости разворота, seconds
			{TurnStart		 2}	; время разгона до макс. угловой скорости с 0, seconds
			{TurnStop	         1}	; время остановки с макс. угловой скорости до 0, seconds
			{Gears 0.05 0.1 0.25 0.37 0.625} ; передаточные коэф-ты коробки передач
                        {RearGears 0.15} ; передаточные коэф-ты коробки передач
		}
        {speed
			{Slow	11	}
			{Normal	16}
			{Fast	22	}
		}
