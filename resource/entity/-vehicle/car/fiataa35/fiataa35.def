{game_entity
	(include "/properties/car.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{collider "truck"}
	{props "vehicle" "car" "turret" "wheeled" "flak" "barrel1" "vision_vehicle_high"}
	("armor_medium" args 1.0)
	{PatherID  "vehicle.large"}
	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-midcar)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar_driver)
		board_end(seat_passenger)
		base(doorright)
	)
	
	{boarder
		{anm "gunner"
			{forward	{begin	"board_sdkfz251-1"}	{end "pose_flak38-1_gunlayer" 10}}
			{reverse 	{end	"emit_body" 1}}
		}
		{anm "charger"
			{forward	{begin	"board_sdkfz251-1"}	{end "mgun_stan_charger2" 10}}
			{reverse 	{end	"emit_body" 1}}
		}
	}
	("crew_human" place(gunner)		bone(gunner)	door(emit4) animation(gunner))
	("crew_human" place(charger)		bone(charger)	door(emit3) animation(charger))
	{placer
		{place "driver" 	{visor "driver"} {group "crew"}}
		{place "commander"	{visor "view-around"} {group "crew"}}
		{place "gunner"		{visor "main"}	 {group "crew"} {openForCrush}}
		{place "charger"	{visor "charger"}	 {group "crew"} {openForCrush}}
	}
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")
	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{volume "cabin"
		{tags "cabin"}
		{component "cabin"}
		{thickness 3}
	}
	{volume "turret"
		{tags "turret"}
		{thickness 10}
	}
	{component "turret"
		{RepairTime 20}
	}
	{Volume "gun"
		{tags "gun"}
		{thickness 15}
	}
	{component "gun"
		{RepairTime 15}
	}
	{extender "inventory"
		{box
			{item "bullet20 zenite" 480}
		}
	}
	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_Scotti" filling "bullet20 zenite" 12}
			("abm_low")
			{gunner "gunner"}
			{charger "charger"}
		}
	}
	
	
	{sensor
		{visor "view-around"
			{bone "basis"}
		}		
		{visor "driver"
			{vision "human"}
			{bone "visor"}
		}
		{visor "charger"
			{vision "cannon_crew"}
			{bone "turret"}
		}
		{visor "main"
			{vision "human"}
			{bone "gun_rot"}
		}		
	}
	{mass 4500}
	{Chassis
        {Locomotion ("locomotion")
			{MaxSpeed 38}
			{BrakeTime  2}  
			{StopTime   4.2}
        }
		{FuelBag
			{volume 100 }	
			{rate	3.4 }   
			{remain 100 }
			{fuel "fuel"}
		}
		("car_trace" fx("tracewheel01") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	}
	{Extension "fiataa35.mdl"}
	{bone "turret"
		{speed 0.0225}
	}
	{bone "gun_rot"
	    {limits -5 85}
	    {speed 0.025}
	}
