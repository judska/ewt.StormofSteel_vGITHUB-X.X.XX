{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(0.9))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{mass 1750}
	{props "vehicle" "car" "wheeled" "vision_vehicle_low" "turret" "flak"}
	{PatherId "vehicle.small"}
	("armor_light" args 1.0)
	{targetSelector "tank_bullet"}

	
	 (define "define_place"
	          {placer
	             {place "%place"
	                {linkbone "%place"}
	                {attach squat_lie}
	                {turnoff {shadow}}
	                {obstacle disable}
	             }
	          }
	          {Volume "%place"
	             {tags "attach" "attach_%place"}
	             {able clear {bullet 0} {touch 1}}
	          }
	)
	{Placer
	          {place "attach01"
	             {entity "can"}
	             {Linkbone "attach01"}
	             {handlebone "basis"}
	             {obstacle disable}
	          }
	          {place "attach02"
	             {entity "can"}
	             {Linkbone "attach02"}
	             {handlebone "basis"}
	             {obstacle disable}
	          }
	          {place "attach03"
	             {entity "can"}
	             {Linkbone "attach03"}
	             {handlebone "basis"}
	             {obstacle disable}
	          }
		}
	)

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	
	("crew_2_human")
 	("crew_human" place(gunner) bone(gunner) door(emit3) animation(gunner))

	{boarder
		{anm "driver"
			{forward	{begin	"board_Kubel_driver"} {end "seat_Willis_driver"} {base "doorleft"}}
			{reverse 	{end	"board_Kubel_driver" 1} {base "doorleft" 1}}
		}
		{anm "commander"
			{forward	{begin	"board_Kubel_commander"} {end "seat_Willis_passenger"} {base "doorright"}}
			{reverse 	{end	"board_Kubel_commander" 1} {base "doorright" 1}}
		}
		{anm "gunner"
			{forward	{begin	"board_Kubel_leftpassenger"} {end "seat_driver_car"} {base "doorleft1"}}  
			{reverse 	{end	"board_Kubel_leftpassenger" 1} {base "doorleft1" 1}}
		}
	}

	{sensor
		{visor "driver"
			{bone "visor1"}
			{vision "moto_crew"}
		}
		{visor "main"
			{bone "visor2"}
			{vision "vehicle_top_mgun"}
		}
	}
	
	{extender "inventory"
		{Box
			{size 5 5}
			{clear}
			{item "repair_kit" 1}
			{item "mgun ammo" 10000}
		}
	}
	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{type "mgun_aa"}
			{weapon "mg34_x2" filled}
			{foresight "foresight3"}
			{charger "gunner"}
			{Barrels 2}
			{basic}
			("abm_mgun")
		}
	}
	{Chassis
		{Locomotion ("locomotion")
			{Maxspeed 36}
	  		{maxSpeedAtMaxTurn 15}
      		{TurnRadius 5}
			{StartTime 8}	
		}
		{FuelBag
			{volume 60 }	
			{rate	10 }   
			{remain 60 }
			{fuel "fuel"}
		}
		{speed
			{Normal  12}
			{Slow  20}
		}
		("car_trace" fx("tracewheel02a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02a") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	}
	
	{Extension "stoewer_t40_kfz4.mdl"}
	
	{Volume "body1"
		{tags "body"}
		{thickness 4}
		{component "body"}
	}
	{Volume "body"
		{tags "body"}
		{thickness 4}
		{component "body"}
	}
	{component "body"	
		{RepairTime 40}
	}
	
	{volume "engine"
		{thickness 0.3}
	}
	{component "engine"	
		{RepairTime 50}
	}
	
	{Volume "fuel"
		{thickness 1}
	}
	
	{Volume "wheell1"
		{thickness 4}
	}
	{Volume "wheell2"
		{thickness 4}
	}
	{Volume "wheelr1"
		{thickness 4}
	}
	{Volume "wheelr2"
		{thickness 4}
	}
}
