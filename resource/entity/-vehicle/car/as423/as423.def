	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)
{placer
	{place "driver" {visor "driver"}}
	{place "gunner" {visor "main"}}
	{place "charger" {visor "main"}}
	{place "commander" {visor "mgun1"}}
}
("crew_human" place(driver)		door(emit1) group(crew)		animation(driver))
("crew_human" place(gunner)		door(emit2) group(crew)	    animation(gunner))
("crew_human" place(charger)	door(emit2) group(crew)	    animation(charger))
