{game_entity
	(include "/properties/cannon.ext")
	{props "vehicle" "cannon" "wheeled" "vision_cannon_medium" "muzzle_small"}
	("armor_medium")
	
	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	("crew_wheeled_gun")
	{boarder
		{anm "gunner"
			{forward	{end "pose_m42_gunlayer" 10}}
		}
		{anm "commander"
			{forward	{end "pose_m42_charger" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	{extender "inventory"
		{box
			{item "ammo bullet57 ap" 50}
			{item "ammo bullet57 fg" 5}
			{item "ammo bullet57 apcr" 5}
		}
	}
	{Weaponry

		{place "gun"
			{weapon "57mm_oqf_1" filling "ammo bullet57 ap" 1}

			{Rotate}
			("abm_field_gun")
		}
	}
	{mass 1150}
	{Extension "qf6.mdl"}
	(include "/properties/selection/cannon.inc"  scale(0.7))
	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "cannon_m42_gunlayer" ""}
			{fire  "Cannon_gunlayer_fire-alert" "cannon_m42_charger_fire"}
			{reload  "" "cannon_m42_charger"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		(mod "mp" {rotate_ik_Limit 0})
	}
	{Chassis "track"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_small")
	}
	{bone "turret"
		{limits -20 20}
		{speed 0.007}
	}
	{bone "gun_rot"
		{limits -14 7}
		{speed 0.007}
	}
}
