{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	
	{collider "tank.medium"}
	{props "medium" "turret_rotator" "vision_vehicle_high" "muzzle_large"}
	
	{extender "enumerator"
			{digit_folder "rustext"}
	}
	
	{Volume "gun"
		{thickness 30}
	}
	
	("armor_medium"  turret(120 90 75 20) body(90 75 45 20))
	("armor_mantlet" t(120))
	("armor_engine"  t(30 60 45 22))
	
	("shield" args 8)
	{extender "shield"
		{on}
	}
	
	{component "shieldl1" {tags "shield"}}
	{component "shieldl2" {tags "shield"}}
	{component "shieldr1" {tags "shield"}}
	{component "shieldr2" {tags "shield"}}
		
	("crew_4_human")

	{boarder
			{anm "driver"
						{forward	{begin	"board_pz4_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
						{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		        }
			{anm "left"
				{forward	{begin	"board_Is-2"} {end "seat_m7_mgunner"}}
				{reverse 	{end	"emit_tank_1_hold"}}
			}
			{anm "right"
				{forward	{begin	"board_Is-2"} {end "seat_m7_mgunner"}}
				{reverse 	{end	"emit_tank_1_hold"}}
			}
			{anm "armor"
				{forward	{begin	"board_HighArmor"} 	{end "seat_isu1"}}
				{reverse 	{end	"emit_tank_2"}}
			}
			{anm "armor1"
				{forward	{begin	"board_HighArmor"} 	{end "seat_isu"}}
				{reverse 	{end	"emit_tank_2"}}
	}
	}
		
	("seat_human" place(seat1) bone(seat01) door(emit4)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor1))
	
	{extender "inventory"
		{box
	            	{item "bullet85 ap" 20}
	           	{item "bullet85 apcr" 5}
	           	{item "bullet85 fg" 28}
	           	{item "ammo mgun" 1900}
		}
	}
	
	{Weaponry
			("restore_ik_time")
			{place "gun"
				{RestoreIKAfterAim}
				{weapon "85mm_zis53" filling "bullet85 ap" 1}	
				("abm_medium")
			}
			{place "mgun2"
				{type "mgun_coaxial"}
				{weapon "dt" filled}
				{foresight "foresight5"}
				("abm_mgun")
	            		{basic}
			}
	}
	
	{mass 31800}
	{Chassis
        ("tank_trace" fx("tracks_mid") step(0.52) len(1.3))
		{Locomotion ("locomotion")
			{maxspeed   50}
			{maxSpeedAtMaxTurn 6.5}
			{StartTime	  30}
			{TurnTime	  14}
			{TurnStart        1.5}
    			{BrakeTime        1.5}
     			{StopTime         2.5} 
    			{TurnRadius         8} 
    			{TurnStop         0.7} 
    			{Gears      0.1 0.2 0.35 0.5 1.0}
    			{RearGears       0.3}
		}
		{FuelBag
			{volume 790 }	
			{rate	2.4 }   
			{remain 790 }
			{fuel "fuel"}
		}
		{speed
        		{Normal  12}
    		}
	}

	{Extension "t44.mdl"}

	{bone "gun_rot"
		{speed 0.001}
	}
	{bone "turret"
		{speed2 17.5}
	}
}
