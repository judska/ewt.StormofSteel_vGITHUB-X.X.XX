{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "medium" "turret_rotator" "vision_vehicle_high" "muzzle_medium"}
	{tag "charioteer"}
	
	{extender "enumerator"}

	{Volume "body1"
		{tags "body"}
		{component "body"}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
	}
	{Volume "body3"
		{tags "body"}
		{component "body"}
	}
	{Volume "gun"
		{tags "gun"}
		{component "gun"}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
	}

	{volume "turret1"
		{tags "turret"}
		{component "turret"}
	}
	{volume "turret2"
		{tags "turret"}
		{component "turret"}
	}
	{volume "turret3"
		{tags "turret"}
		{component "turret"}
	}
	("armor_medium" turret(30 25 30 20) body(64 46 38 14) body2(64 32 32 14) body3(64 32 32 14))
	("armor_engine"  t(38 38 38 38))

	("shield" args 10)
	
	{extender "shield"
		{on}
	}
	{component "shieldl1" {tags "shield"}}
	{component "shieldl2" {tags "shield"}}
	{component "shieldr1" {tags "shield"}}
	{component "shieldr2" {tags "shield"}}

	("crew_4_human")


	{boarder
		{anm "left"
			{forward	{begin	"board_tank_right"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_lowArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
	}



	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))


	{extender "inventory"
		{box
			{item "ammo bullet84 ap" 25}
			{item "ammo bullet84 fg" 10}
			{item "ammo bullet84 apcr" 5}
			{item "ammo mgun" 3150}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "84mm_qf20" filled}	
			("abm_high")
		}
	}

	{mass 28000}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.2))
		{Locomotion ("locomotion")
            {MaxSpeed   36}
			{maxSpeedAtMaxTurn 36}
			{StartTime  15}
			{TurnStart  1.7}			
			{TurnTime   8}
			{TurnRadius 9} 
    		{TurnStop   0.8}
			{BrakeTime  1.5}
			{StopTime   3}
			{Gears   0.2 0.4 1}
			{RearGears  0.25}
		}
		{FuelBag
			{volume 1000 }	
			{rate	110 }   
			{remain 1000 }
			{fuel "fuel"}
		}
		{speed
        	{Normal  10}
        	{Slow  16}
    	}
	}
       {Extension "charioteer.mdl"}
}