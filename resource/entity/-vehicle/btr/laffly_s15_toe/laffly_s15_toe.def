{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/tank_crew.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "armored_car" "tank" "turret" "wheeled" "with_gun" "vision_vehicle_medium"}
	{targetSelector "tank_bullet"}

	{targetclass "armoredcar" "ap bullet"}

	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 10
			{front	16}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 10}
	}

	{volume "turret"
		{component "turret"}
		{tags "turret" "body"}
		{thickness 19
		    {front 22}
		}
	}

	{volume "engine"
		{thickness 10
			{front	15}
		}
	}
	
	("armor_medium" args 1.2)
	
	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
	}

	("crew_human" place(driver)	door1(emit1) door2(emit2) visor(driver))
	("crew_human" place(commander)	door1(emit1) door2(emit2) visor(driver))
	("crew_human_visible" place(gunner)	door1(emit1) door2(emit2)  visorbone(mgun))
	("crew_human_visible" place(gunner2)	door1(emit3)  visorbone(mgun1))

	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item "ammo mgun" 1500}
			{item "fm_24-29" filled {user "mgun"}}
		}
	}
	{Weaponry
		{place "mgun"
			{type "mgun_aa"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "mgun_rear"}
			{weapon "lewis_gun" filled}
			{LinkBone "mgun1"}
			{foresight "foresight4"}
			{LinkAnimation "off"}
			{gunner "gunner2"}
			{charger "gunner2"}
			("abm_mgun")
			{basic}
		}

	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")
        {mass 7000}
	{Chassis
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL3") boner("FXtraceR3"))
		{Locomotion ("locomotion")
			{MaxSpeed	48}
			(mod "mp" 
				{MaxSpeed  48}
			)
	  		{maxSpeedAtMaxTurn 12}		
			{StartTime	9}
			{BrakeTime	1.5}	
			{StopTime	3}
			{TurnRadius	7}
		}
		(mod "mp"
			{FuelBag
				{volume 360 }	
				{rate	  5 }   
				{remain 360 }
				{fuel "fuel"}
			}
		    {speed
        		{Normal  38}
    		}
		)
	}
       {Extension "laffly_btr.mdl"}
}
    