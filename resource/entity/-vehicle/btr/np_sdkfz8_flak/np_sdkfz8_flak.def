{entity
	(include "/properties/armoredcar.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.3))
	{props "vehicle" "armored_car" "tank" "turret" "wheeled" "with_gun"  "vision_vehicle_medium" "muzzle_medium"}
	{targetClass "armoredcar"}
	{targetSelector "tank"}
	("armor_medium" args 1.1)
	
	{boarder
		{anm "driver"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_body" 1}}
		}
		{anm "gunner"
			{forward	{begin	"board_SdKfz251-1"} {end "pose_flak41_gunlayer" 10}}
			{reverse 	{end	"emit_body" 1}}
		}
		{anm "charger"
			{forward	{begin	"board_SdKfz251-1"} {end "pose_pdr25_gunlayer" 10}}
			{reverse 	{end	"emit_body" 1}}
		}
	}
	(define "crew_human"
		{placer
			{place "%place" {group "%group"} {linkbone "%bone"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)
	{placer
		{place "driver" {visor "driver"}}
		{place "gunner" {visor "main"}}
	}
	("crew_human" place(driver)	door(emit1) bone(driver) animation(driver)		group(crew))
	("crew_human" place(gunner)	door(emit2) bone(gunner) animation(gunner)		group(crew))	
	("crew_human" place(charger)	door(emit1) bone(charger) animation(charger)		group(crew))
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("tracks")
	{Extension "sdkfz8_flak.mdl"}
	{mass 15000}
	{Chassis
		{Locomotion ("locomotion")}
	}
	{extender "inventory"
		{box
			{item "bullet88 ap" 50}
			{item "bullet88 fg" 50}
			{item "bullet88 apcr" 5}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "88mm_flak37_1" filled}
			("abm_low")
		}
	} 
	(define "tank_trace"
   		{Track "left"
	    		{Tracer
    				{View %fx} ; "tracks"
    				{Bone %boneleft}
	    			{Step %step}			; 0.7 meters
    			}
			{TextureScroller
	    			{Bone "TrackL"}
    				{Length %len}		; 0.6 meters per animation
    			}
    		}
    		{Track "right"
    			{Tracer 
	    			{View %fx}
    				{Bone %boneright}
    				{Step %step}			; in meters
	    		}
			{TextureScroller
	    			{Bone "TrackR"}
    				{Length %len}		; meters per animation
    			}
    		}
	)
	
	{Chassis
		; left track must be first
		("tank_trace" fx("tracks_mid") step(0.52) len(1.0) boneleft("FXtraceL2") boneright("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	}
	
	 (define "define_place"
	          {placer
	             {place "%place"
	                {linkbone "%place"}
	                {attach squat_lie}
	                {turnoff {shadow}}
	                {obstacle disable}
	             }
	          }
	          {Volume "%place"
	             {tags "attach" "attach_%place"}
	             {able clear {ger_bullet 0} {touch 1}}
	          }
	)
	
	{Volume "body"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{component "cabin"	
		{RepairTime 7}
	}
	{Volume "cabin2"
		{tags "cabin"}
		{component "cabin"}
		{thickness 15}
	}
	{Volume "cabin"
		{tags "cabin"}
		{component "cabin"}
		{thickness 15}
	}
	{component "engine"	
		{RepairTime 10}
	}
	{volume "engine"
		{thickness 15}
	}
	{Volume "turret"
		{thickness 10}
	}
	{volume "shield_front"	
		{thickness 25}
	}
	{Volume "gun"
		{thickness 10}
	}
	{component "shield_front"	
		{RepairTime 20}
	}
	{extender "shield"
			{on}
	}

	{bone "turret"
		{speed 0.015}
	}
}
